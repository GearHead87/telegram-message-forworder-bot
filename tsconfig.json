{
	"compilerOptions": {
		"target": "ES2018",
		"module": "CommonJS",
		"moduleResolution": "Node",
		"lib": ["ES2020"],
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"outDir": "./build",
		"rootDir": ".",
		"allowJs": true,
		"resolveJsonModule": true,
		"isolatedModules": true
	},
	"include": ["src/**/*", "api/**/*"],
	"exclude": ["node_modules"]
}